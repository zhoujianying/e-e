<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title> 
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
    <link rel="stylesheet" href="../style/public.css">
  </head>
  <body class="body">
    <div id='app'>
        <el-card class="box-card">
            <div slot="header" class="clearfix">
                <span>家庭信息</span>
                <el-row style="display: inline-block;margin-left: 50px;margin-bottom: 0">
                    <el-button  type="primary" @click="dialogTableVisibleUserEdit = true">编辑</el-button>
                    <el-button type="primary">添加用户</el-button>
                    <el-button type="primary" @click="dialogTableVisibleUserRegister = true">查看注册用户</el-button>
                </el-row>
            </div>
            <div>
                <el-row :gutter="20">
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">户主姓名:</span>
                            <div class="inputBox">
                                <el-input v-model="householderName" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">角色:</span>
                            <div class="inputBox">
                                <el-select v-model="role" placeholder="请选择">
                                        <el-option
                                            v-for="item in roles"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">状态:</span>
                            <div class="inputBox">
                                <el-select v-model="editStatus" placeholder="请选择">
                                        <el-option
                                            v-for="item in editStatuss"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">性别:</span>
                            <div class="inputBox">
                                <el-select v-model="sex" placeholder="请选择">
                                        <el-option
                                            v-for="item in sexs"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">证件类型:</span>
                            <div class="inputBox">
                                <el-select v-model="documentType" placeholder="请选择">
                                        <el-option
                                            v-for="item in documentTypes"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">证件号码:</span>
                            <div class="inputBox">
                                <el-input disabled v-model="identificationNumber" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">联系方式:</span>
                            <div class="inputBox">
                                 <el-input disabled v-model="tel" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                </el-row>       
            </div>
        </el-card>
        <el-card class="box-card">
            <div slot="header" class="clearfix">
                <span>其他家庭成员信息</span>
                <el-row style="display: inline-block;margin-left: 50px;margin-bottom: 0">
                    <el-button  type="primary" @click="dialogTableVisibleUserEdit = true">编辑</el-button>
                    <el-button type="primary" @click="dialogTableVisibleUserRegister = true">查看注册用户</el-button>
                </el-row>
                <el-row style="display: inline-block;float:right;margin-bottom: 0">
                    <el-button type="primary" icon="el-icon-arrow-down" v-if='otherFamilyDown' @click='handleSlideDown'>点击查看其他家庭成员信息</el-button>
                    <el-button type="primary" icon="el-icon-arrow-up" v-if='otherFamilyUp' @click='handleSlideUp'>点击收回</el-button>
                </el-row>
            </div>
            <div v-if='otherInforIsshow'>
                <el-row :gutter="20">
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">户主姓名:</span>
                            <div class="inputBox">
                                <el-input v-model="householderName" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">角色:</span>
                            <div class="inputBox">
                                <el-select v-model="role" placeholder="请选择">
                                        <el-option
                                            v-for="item in roles"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">状态:</span>
                            <div class="inputBox">
                                <el-select v-model="status" placeholder="请选择">
                                        <el-option
                                            v-for="item in statuss"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">性别:</span>
                            <div class="inputBox">
                                <el-select v-model="sex" placeholder="请选择">
                                        <el-option
                                            v-for="item in sexs"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">证件类型:</span>
                            <div class="inputBox">
                                <el-select v-model="documentType" placeholder="请选择">
                                        <el-option
                                            v-for="item in documentTypes"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">证件号码:</span>
                            <div class="inputBox">
                                <el-input disabled v-model="identificationNumber" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">联系方式:</span>
                            <div class="inputBox">
                                    <el-input disabled v-model="tel" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                </el-row>       
            </div>
        </el-card> 
        <!-- 编辑用户信息弹出框 -->
        <el-dialog title="编辑用户信息" :visible.sync="dialogTableVisibleUserEdit" width='75%'>
            <div>
                <el-row :gutter="20">
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">用户编码:</span>
                            <div class="inputBox">
                                <el-input disabled v-model="userCoding" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">用户姓名:</span>
                            <div class="inputBox">
                                <el-input disabled v-model="userName" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">状态:</span>
                            <div class="inputBox">
                                <el-select v-model="editStatus" placeholder="请选择">
                                        <el-option
                                            v-for="item in editStatuss"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">性别:</span>
                            <div class="inputBox">
                                <el-select v-model="editSex" placeholder="请选择">
                                        <el-option
                                            v-for="item in sexs"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">证件类型:</span>
                            <div class="inputBox">
                                <el-select v-model="editDocumentType" placeholder="请选择">
                                        <el-option
                                            v-for="item in documentTypes"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">证件号码:</span>
                            <div class="inputBox">
                                <el-input disabled v-model="editIdentificationNumber" placeholder="请输入内容"></el-input>
                            </div>                   
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber" style="flex: 1">联系方式:</span>
                            <div class="inputBox"  style="flex: 2">
                                <el-input v-model="editTel" placeholder="请输入内容"></el-input>
                            </div> 
                            <div  style="flex: 1">
                                <el-button type="info" icon="el-icon-plus"></el-button>
                            </div>                  
                        </div>
                    </el-col>
                    <el-col :span="8">
                        <div class="grid-content bg-purple">
                            <span class="laber">用户类别:</span>
                            <div class="inputBox">
                                <el-select v-model="editDocumentType" placeholder="请选择">
                                        <el-option
                                            v-for="item in editDocumentTypes"
                                            :key="item.value"
                                            :label="item.label"
                                            :value="item.value">
                                        </el-option>
                                </el-select>
                            </div>                   
                        </div>
                    </el-col>
                </el-row>       
            </div>
            <div slot="footer" class="dialog-footer">
                <el-button @click="handleDialogEditCanel">取 消</el-button>
                <el-button type="primary" @click="handleDialogEditSure">确 定</el-button>
            </div> 
        </el-dialog>
        <!-- 注册用户信息弹窗 -->
        <el-dialog title="注册用户信息" :visible.sync="dialogTableVisibleUserRegister" width='75%'>
            <div>  
                <template>
                    <el-table
                        ref="multipleTable"
                        :data="tableData"
                        tooltip-effect="dark"
                        style="width: 100%"
                        border='true'
                        row-click='handleUserInfor(row, event, column)'
                    >
                            <el-table-column prop="name" label="注册账户"></el-table-column>
                            <el-table-column prop="name" label="注册方式"></el-table-column>
                            <el-table-column prop="address" label="注册日期"></el-table-column>
                            <el-table-column prop="address" label="注册手机号"></el-table-column>
                            <el-table-column prop="address" label="失效日期"></el-table-column>
                            <el-table-column prop="address" label="状态"></el-table-column>
                    </el-table>
                </template>
            </div>  
            <div slot="footer" class="dialog-footer">
                <el-button @click="handleDialogResgiter">关 闭</el-button>
            </div>  
        </el-dialog>     
       
    </div>
   
  </body>
  <script src="https://unpkg.com/vue/dist/vue.js"></script>
  <script src="https://unpkg.com/element-ui/lib/index.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script>
    new Vue({
      el: '#app',
      data: function() {
        return { 
          dialogTableVisibleUserEdit:false,   //控制编辑弹窗显示隐藏
            dialogTableVisibleUserRegister:false,   //控制注册用户信息弹窗显示隐藏
            householderName:'',   //户主姓名
            role:'',   //  角色
            roles:[],   //角色下拉列表数据
            status:'',   //状态
            statuss:[],  //状态下拉列表数据
            sexs:'',    //性别
            sexs:[],  //性别下拉列表数据
            documentType:'', //证件类型
            documentTypes:[],   //证件类型下拉列表数据
            identificationNumber:'',   //证件号码
            tel:'',   //联系方式
            otherFamilyDown:true,   //控制点击其他成员下拉按钮显示隐藏
            otherFamilyUp:false,   //控制点击其他成员收起按钮显示隐藏
            otherInforIsshow:false,   //控制其他家庭成员信息表单的显示隐藏
            //     编辑用户信息
            userCoding:'',   //用户编码
            userName:'',  //用户姓名
            editStatus:'',   //用户状态
            editStatuss:'',   //用户状态下拉列表数据
            editSex:'',   //用户性别
            editDocumentType:'',   //证件类型
            editIdentificationNumber:'',   //证件号码
            editTel:'',   //联系方式
            editDocumentType:'',   //用户类别
            editDocumentTypes:[],   //用户类别下拉列表数据
            tableData: [{
                date: '2016-05-03',
                name: '王小虎',
                address: '上海市普陀区金沙江路 1518 弄'
            }],
        }
      },
      methods: {
        handleSlideDown:function(){     // 点击其他成员下拉按钮表单显示
            this.otherFamilyDown=false;  
            this.otherFamilyUp=true;  
            this.otherInforIsshow=true;
        },
        handleSlideUp:function(){     // 点击其他成员收起按钮表单隐藏
            this.otherFamilyDown=true;  
            this.otherFamilyUp=false;
            this.otherInforIsshow=false;
        },
        handleDialogEditCanel:function(){    //点击编辑弹出框取消按钮
            this.dialogTableVisibleUserEdit = false
        },
        handleDialogEditSure:function(){    //点击编辑弹出框确定按钮
            this.dialogTableVisibleUserEdit = false
        },
        handleDialogResgiter:function(){    //点击注册用户信息弹出框关闭按钮
            this.dialogTableVisibleUserRegister = false
        },
      },
      mounted:function(){
        axios.post('/user', {
            firstName: 'Fred',
            lastName: 'Flintstone'
        })
        .then(function (response) {
            console.log(response);
        })
        .catch(function (error) {
            console.log(error);
        });
      }
    })
  </script>
</html>